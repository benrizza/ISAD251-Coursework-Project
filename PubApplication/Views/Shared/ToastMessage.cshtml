@model ToastAlertViewModel

@{
        var photoPath = "~/images/" + (Model.ToastImagePath ?? "RedLionText.png");
}

<style>
    .toast-img {
        max-height: 80px;
        width: auto;
        margin: auto;
        display: block;
    }

    .fade {
      transition: opacity 0.25s linear !important;
    }
</style>

<!-- Then put toasts within -->
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="1250">
    <div class="toast-header">
        <strong id="ToastyMessage" class="mr-auto">@Model.ToastTitle</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        <div class="contianer">
            <div class="row">
                <div class="col-4">
                    <img class="toast-img" src="@photoPath" alt="Card image" asp-append-version="true">
                </div>
                <div class="col-8">
                    <p> @Model.ToastBody </p>
                </div>
            </div>
        </div>

    </div>
</div>
