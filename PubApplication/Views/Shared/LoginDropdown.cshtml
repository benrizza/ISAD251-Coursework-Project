@model LoginViewModel
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown"> Login </a>
        <div class="dropdown-menu dropdown-menu-right" style="min-width: 20rem">
            <form method="post" asp-action="login" asp-controller="account">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="dropdown-item form-group">
                    <label asp-for="UserID"></label>
                    <input asp-for="UserID" class="form-control" />
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                <div class="dropdown-item form-group">
                    <label asp-for="UserPassword"></label>
                    <input asp-for="UserPassword" class="form-control" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>
                <input type="hidden" name="returnAction" value="@ViewBag.returnAction" />
                <input type="hidden" name="returnController" value="@ViewBag.returnController" />
                <button type="submit" class="btn btn-primary float-right m-4"> Login </button>
            </form>
        </div>
    </li>